<% content_for(:title, t('.title')) %>
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-7">
      <%= form_with model: @user, url: profile_path, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <h1 class="h3 mb-3 text-center"><%= t('.title') %></h1>
        <div class="d-flex justify-content-center">
          <%= image_tag current_user.avatar.url, class: 'rounded-circle', size: "80x80" %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.label :avatar %>
          <%= f.file_field  :avatar, class: "form_control", accept: 'image/*' %>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <div class="mb-3 mt-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control'%>
        </div>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control'%>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <%= f.submit t('defaults.update'), class: 'btn btn-primary' %>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <%= link_to t('.password_reset'), new_password_reset_path, class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
