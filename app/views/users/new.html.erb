<div class="container-fluid d-flex align-items-center py-4 bg-body-tertiary">
  <div class="form-signin w-100 m-auto">
    <%= form_with model: @user, local: true, class: 'text-center' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <h1 class="h3 mb-3 fw-normal">新規登録</h1>
      <div class="form-floating">
        <%= f.text_field :name, class: 'form-control', id: 'floatingName'%>
        <label for="floatingName">ユーザーネーム</label>
      </div>
      <div class="form-floating">
        <%= f.email_field :email, class: 'form-control', id: 'floatingInput'%>
        <label for="floatingInput">メールアドレス</label>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class: 'form-control', id: 'floatingPassword'%>
        <label for="floatingPassword">パスワード</label>
      </div>
        <div class="form-floating">
        <%= f.password_field :password_confirmation, class: 'form-control', id: 'floatingPassword_confirmation'%>
        <label for="floatingPassword_confirmation">パスワード確認</label>
      </div>
      <%= f.submit '登録', class: 'btn btn-primary w-100 py-2' %>
      <p class="mt-5 mb-3 text-body-secondary">&copy; 2023</p>
    <% end %>
  </div>
</div>